<script>
const correctPassword='18102025'
const startDate=new Date('2025-10-18T10:00:00')
const music=document.getElementById('music')
const playBtn=document.getElementById('playBtn')
const progress=document.getElementById('progress')

document.getElementById('enterBtn').onclick=()=>{
  if(password.value===correctPassword){
    login.style.display='none'
    content.classList.remove('hidden')
    music.play().catch(()=>{})
    try{
      if(document.fullscreenEnabled) document.documentElement.requestFullscreen().catch(()=>{})
    }catch(e){}
  }else alert('Senha incorreta üíî')
}

playBtn.onclick=()=>{
  if(music.paused){
    music.play()
    playBtn.textContent='‚è∏'
  }else{
    music.pause()
    playBtn.textContent='‚ñ∂'
  }
}

music.ontimeupdate=()=>{
  progress.value=(music.currentTime/music.duration)*100||0
}

progress.oninput=()=>{
  music.currentTime=(progress.value/100)*music.duration
}

function updateCounter(){
  let diff=new Date()-startDate
  if(diff<0) diff=0
  const s=Math.floor(diff/1000)
  seconds.textContent=s%60
  minutes.textContent=Math.floor(s/60)%60
  hours.textContent=Math.floor(s/3600)%24
  days.textContent=Math.floor(s/86400)%30
  months.textContent=Math.floor(s/2628000)%12
  years.textContent=Math.floor(s/31536000)
}
setInterval(updateCounter,1000)
updateCounter()
</script>

